{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": ["build", "Stylora.API/Stylora.API.csproj"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Start Backend API",
      "type": "shell",
      "command": "dotnet",
      "args": ["run", "--project", "Stylora.API/Stylora.API.csproj", "--urls", "http://localhost:5231"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Start Frontend Angular",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/Stylora.Client"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${cwd}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": ".*"
          },
          "endsPattern": {
            "regexp": ".*Local:.*http://localhost:4200.*"
          }
        }
      }
    },
    {
      "label": "Start Full Stack App",
      "dependsOrder": "parallel",
      "dependsOn": ["Start Backend API", "Start Frontend Angular"],
      "group": "build"
    },
    {
      "label": "Open Swagger UI",
      "type": "shell",
      "command": "powershell",
      "args": ["-Command", "Start-Sleep -Seconds 5; Start-Process 'http://localhost:5231/swagger'"],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}